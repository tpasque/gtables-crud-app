        label(for="cuisine") Cuisine
        select.form-control(id="cuisine" name="cuisine")
          option American
          option French
          option Mexican
          option Italian
          option Asian
          option Thai
          option Vietnamese
          option BBQ
        br
        .form-group
        label(for="rating") Rating
        .radio
          label
            '0'
            input(type="radio" name="rating" value="0")
            '1'
            input(type="radio" name="rating" value="1")
            '2'
